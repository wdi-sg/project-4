<h1>Edit Promo</h1>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<%= form_for @current_advert do |f| %>
<div class="field">

  <div class="center">
    <img class='advert_image' onclick="openEventWidgets()" src="http://i.imgur.com/hFjTK8K.png" data-toggle="tooltip" data-placement="right" title="Click to upload advert image">
  </div>

  <h4><%= f.label :title %> :</h4>
  <%= f.text_field :title, autofocus: true, required: true, class: "form-control"  %>
</div>

<div class="">
  <h4><%= f.label :description %>:</h4>
  <p><%= f.text_area :description,size: "100x5", required: true, class: "form-control" %> </p>
</div>

  <%= f.hidden_field :advert_image %>

<div class="center">
    <%= f.submit "Create", class: "btn btn-primary" %>
</div>

  <br>
<% end %>

</div>

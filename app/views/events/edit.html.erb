<br><br>
  <%= form_for @current_event do |f| %>

  <div class="">
    <p><%= f.label :Title %>:</p>
    <p><%= f.text_field :title, required: true, autofocus: true %></p>
  </div>

  <div style="overflow:hidden;">
    <div class="form-group">
      <div class="row">
        <div class="col-md-8">
          <p><%= f.label :Start %>:</p>
          <p><%= f.text_field :event_start, required: true, id: 'datetimepickerstart' %></p>
        </div>
      </div>
    </div>
  </div>

  <div style="overflow:hidden;">
    <div class="form-group">
      <div class="row">
        <div class="col-md-8">
          <p><%= f.label :End %>:</p>
          <p><%= f.text_field :event_end, required: true, id: 'datetimepickerend' %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="">
    <p><%= f.label :Venue %>:</p>
    <p><%= f.text_field :venue, required: true %></p>
  </div>

  <div class="">
    <p><%= f.label :total_slots %>:</p>
    <p><%= f.number_field :total_slots, :min => 1, required: true %></p>
  </div>

  <div class="">
    <p><%= f.label :price_pax %>:</p>
    <p><%= f.number_field :price_pax, :min => 0, required: true  %></p>
  </div>

  <div class="">
    <p><%= f.label :Description %>:</p>
    <p><%= f.text_area :description, size: "100x15", required: true %></p>
  </div>

<div class="">
  <p>Event Image: </p>
    <div class="center">
       <div class="input-field inline">
         <img onclick="openEventWidget()" src="http://i.imgur.com/hFjTK8K.png" class="event_image">

       </div>
     </div>
</div>

<%= f.hidden_field :event_image %>

  <div class="actions">
    <%= f.submit "Create Event", class: "btn btn-primary" %>
    <br>
  </div>

  <% end %>

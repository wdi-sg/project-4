<h1>create event</h1>



<div class="container">

  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
<br><br>
  <%= form_for @new_event do |f| %>

  <div class="">
    <p><%= f.label :Title %>:</p>
    <p><%= f.text_field :title, required: true %></p>
  </div>

  <div class="">
    <p><%= f.label :Description %>:</p>
    <p><%= f.text_area :description, required: true %></p>
  </div>

  <div class="">
    <p><%= f.label :Venue %>:</p>
    <p><%= f.text_field :venue, required: true %></p>
  </div>

  <div class="">
    <p><%= f.label :total_slots %>:</p>
    <p><%= f.number_field :total_slots, :min => 1, required: true %></p>
  </div>

  <div class="">
    <p><%= f.label :price_pax %>:</p>
    <p><%= f.number_field :price_pax, :min => 0, required: true  %></p>
  </div>

  <div style="overflow:hidden;">
    <div class="form-group">
      <div class="row">
        <div class="col-md-8">
          <p><%= f.label :Start %>:</p>
          <p><%= f.text_field :event_start, required: true, id: 'datetimepickerstart' %></p>
        </div>
      </div>
    </div>
  </div>

  <div style="overflow:hidden;">
    <div class="form-group">
      <div class="row">
        <div class="col-md-8">
          <p><%= f.label :End %>:</p>
          <p><%= f.text_field :event_end, required: true, id: 'datetimepickerend' %></p>
        </div>
      </div>
    </div>
  </div>





  <div class="actions">
    <%= f.submit "Create Event" %>
  </div>

  <% end %>

</div>
